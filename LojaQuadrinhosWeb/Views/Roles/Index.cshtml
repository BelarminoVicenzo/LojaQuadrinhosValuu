@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role";
}

<h1>Role</h1>

<p>
     <br />    <button class="btn btn-success create">Create New</button>
 </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NormalizedName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NormalizedName)
                </td>

                <td>
                    <button class="btn btn-link edit" data-id="@item.Id">Edit</button>|
                    <button class="btn btn-link delete" data-id="@item.Id">Delete</button>
                   
                </td>
            </tr>
        }
    </tbody>
</table>








<div id="modal" class="modal fade" role="dialog">

</div>



@section scripts{
    <script>
        $(function () {

            $(".delete").click(function () {
                var id = $(this).attr("data-id");

                $("#modal").load("/Roles/Delete/" + id, function () {
                    $("#modal").modal();
                })
            });

          
            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Roles/Update/" + id, function () {
                    $("#modal").modal();
                })
                

            });

            $(".create").click(function () {
                $("#modal").load("/Roles/Create", function () {
                    $("#modal").modal();
                })
            });

        

        })
    </script>
}
